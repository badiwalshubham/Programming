{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/C",
        "copy",
        "\"${file}\"",
        "\"${workspaceFolder}\\jspwTest.cpp\""
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "\"${workspaceFolder}\\jspwTest.cpp\"",
        "-o",
        "jspwTest"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}\\jspwTest.exe",
      "args": [],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/C",
        "del",
        "${workspaceFolder}\\jspwTest.exe",
        "&&",
        "del",
        "${workspaceFolder}\\jspwTest.cpp"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
